[Unit]
Description=Selenium Grid Node on xvfb
After=syslog.target network.target

[Service]
User=selenium

ExecStart=/usr/bin/xvfb-run -a /usr/bin/java -jar /usr/local/share/selenium/selenium-server-standalone-{{ selenium_version }}.jar -role node -hub http://{{ groups['selenium-hub'][0] }}:{{ selenium_hub_portnumber }}/grid/register -maxSession 500 -browser browserName=firefox,platform=ANY,maxInstances=32 -port 5559 -avoidProxy

[Install]
WantedBy=default.target
